<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joseramirez.calculator.CalculatorActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_minor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/txt_number_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:hint="@string/calculator_value_one_hint"
                android:inputType="number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txt_operator"
                android:layout_width="0dp"
                android:hint="@string/calculator_value_operator_hint"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/txt_number_2"
                android:layout_width="0dp"
                android:hint="@string/calculator_value_two_hint"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:inputType="number"
                android:textAlignment="center" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_minor"
            android:layout_marginTop="@dimen/dp_minor"
            android:text="@string/calculator_result_text" />

        <TextView
            android:id="@+id/lab_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_minor" />
    </LinearLayout>

</RelativeLayout>
